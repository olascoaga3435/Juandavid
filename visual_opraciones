     suma = num1 + num2 + num3 + num4
     alert("el resultado de la suma es : "+suma);
   
     multi = num1 * num2 * num3 * num4
    alert("el resultado de la multiplicacion  es : "+multi);
   
    resta = num1 - num2 - num3 - num4
    alert("el resultado de resta  es : "+resta);
   
    divicion = num1 / num2 / num3 / num4
    alert("el resultado de la divicion  es : "+divicion);

     let menor = Math.min(num1,num2,num3,num4);
